<div ng-controller="NavCtrl">
  <md-sidenav class="md-sidenav-left md-whiteframe-z2" md-component-id="left">
    <md-toolbar class="md-whiteframe-z1">
      <h1 class="md-toolbar-tools">
        EveCom
      </h1>
    </md-toolbar>
    <md-content class="md-padding">
      <div layout="column" layout-margin layout-align="right right">
        <md-list>
          <md-item>
            <md-item-content>
              <md-button ng-href="#/" class="md-primary">
                Home
              </md-button>
            </md-item-content>
            <md-divider></md-divider>
          </md-item>
          <md-item ng-show="user.signedIn">
            <md-item-content>
              <md-button ng-href="#/characters" class="md-primary">Characters</md-button>
            </md-item-content>
            <md-divider></md-divider>
          </md-item>
          <md-item ng-show="user.signedIn">
            <md-item-content>
              <md-button ng-href="#/add_character" class="md-primary">Add Character</md-button>
            </md-item-content>
            <md-divider></md-divider>
          </md-item>
          <md-item ng-show="user.signedIn">
            <md-item-content>
              <md-button ng-click='signOut()' class="md-primary">Logout</md-button>
            </md-item-content>
            <md-divider></md-divider>
          </md-item>
          <md-item ng-show="!user.signedIn">
            <md-item-content>
              <md-button ng-href="#/sign_in" class="md-primary">Login</md-button>
            </md-item-content>
            <md-divider></md-divider>
          </md-item>
          <md-item ng-show="!user.signedIn">
            <md-item-content>
              <md-button ng-href="#/register" class="md-primary">Register</md-button>
            </md-item-content>
            <md-divider></md-divider>
          </md-item>
        </md-list>
      </div>
    </md-content>
  </md-sidenav>
</div>