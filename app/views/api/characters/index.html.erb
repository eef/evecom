<h1>Listing api_characters</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @api_characters.each do |api_character| %>
      <tr>
        <td><%= link_to 'Show', api_character %></td>
        <td><%= link_to 'Edit', edit_api_character_path(api_character) %></td>
        <td><%= link_to 'Destroy', api_character, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Character', new_api_character_path %>
